<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--标题-->
        <include
                android:id="@+id/title"
                layout="@layout/layout_title"></include>
        <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号名称: 12333333333"
                android:textSize="26px"
                android:textColor="#98979C"
                android:layout_below="@+id/title"
                android:layout_marginTop="70px"
                android:layout_centerHorizontal="true"
        />


    <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_old_pwd"
            android:layout_below="@id/tv_phone"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="40px"
            android:layout_width="match_parent"
            android:layout_height="132px">

        <ImageView
                android:id="@+id/iv_portrait"
                android:layout_width="36px"
                android:layout_height="40px"
                android:background="@drawable/iv_mine_login_pwd"
                android:layout_alignBottom="@+id/ed_old_pwd"
        />
        <EditText
                android:id="@+id/ed_old_pwd"
                android:layout_toRightOf="@+id/iv_portrait"
                android:layout_width="match_parent"
                android:paddingLeft="50px"
                android:layout_height="92px"
                android:layout_marginTop="5px"
                android:textSize="30px"
                android:gravity="left|bottom"
                android:hint="请输入旧密码"
                android:textColorHint="#C9C8CD"
                android:textColor="@color/black"
                android:background="@null"
                android:inputType="textPassword"
        />
        <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_login_line"
        />
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_new_pwd"
            android:layout_below="@id/rl_old_pwd"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="132px">

        <ImageView
                android:id="@+id/iv_portrait_1"
                android:layout_width="36px"
                android:layout_height="40px"
                android:background="@drawable/iv_mine_login_pwd"
                android:layout_alignBottom="@+id/ed_new_pwd"
        />
        <EditText
                android:id="@+id/ed_new_pwd"
                android:layout_toRightOf="@+id/iv_portrait_1"
                android:layout_width="match_parent"
                android:paddingLeft="50px"
                android:layout_height="92px"
                android:layout_marginTop="5px"
                android:textSize="30px"
                android:gravity="left|bottom"
                android:inputType="textPassword"
                android:hint="请输入新密码"
                android:textColorHint="#C9C8CD"
                android:textColor="@color/black"
                android:background="@null"
        />
        <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_login_line"
        />
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_new_pwd_again"
            android:layout_below="@id/rl_new_pwd"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="132px">

        <ImageView
                android:id="@+id/iv_portrait_2"
                android:layout_width="36px"
                android:layout_height="40px"
                android:background="@drawable/iv_mine_login_pwd"
                android:layout_alignBottom="@+id/ed_new_pwd_again"
        />
        <EditText
                android:id="@+id/ed_new_pwd_again"
                android:layout_toRightOf="@+id/iv_portrait_2"
                android:layout_width="match_parent"
                android:paddingLeft="50px"
                android:layout_height="92px"
                android:layout_marginTop="5px"
                android:textSize="30px"
                android:inputType="textPassword"
                android:gravity="left|bottom"
                android:hint="请再次输入新密码"
                android:textColorHint="#C9C8CD"
                android:textColor="@color/black"
                android:background="@null"
        />
        <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_login_line"
        />
    </com.zhy.autolayout.AutoRelativeLayout>


    <Button
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_below="@+id/rl_new_pwd_again"
            android:id="@+id/btn_edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_marginTop="110px"
            android:background="@drawable/btn_login_bg"
            android:text="修改密码"
            android:textSize="30px"
            android:textColor="@color/white"
    />
</com.zhy.autolayout.AutoRelativeLayout>