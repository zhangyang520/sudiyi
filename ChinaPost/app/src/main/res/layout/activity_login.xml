<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/iv_top"
            android:layout_width="500px"
            android:layout_height="170px"
            android:layout_marginTop="130px"
            android:src="@drawable/logo_top"
            android:layout_marginLeft="150px"
    />

    <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_role"
            android:layout_below="@id/iv_top"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="55px"
            android:layout_width="match_parent"
            android:layout_height="80px">

        <ImageView
                android:id="@+id/iv_role"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerVertical="true"
                android:background="@drawable/iv_user_role"
                android:layout_marginLeft="20px"
        />
        <EditText
                android:id="@+id/ed_role"
                android:layout_toRightOf="@+id/iv_role"
                android:layout_width="match_parent"
                android:paddingLeft="50px"
                android:layout_height="80px"
                android:layout_marginTop="5px"
                android:paddingTop="5px"
                android:textSize="30px"
                android:paddingBottom="5px"
                android:editable="false"
                android:hint="请选择"
                android:background="@null"
                android:layout_centerVertical="true"
        />
        <View
              android:id="@+id/iv_role_index"
              android:layout_width="25px"
              android:layout_height="16px"
              android:background="@drawable/iv_down"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="20px"
        ></View>
        <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_login_line"
        />
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_name"
            android:layout_below="@id/rl_role"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="55px"
            android:layout_width="match_parent"
            android:layout_height="80px">

         <ImageView
                 android:id="@+id/iv_portrait"
                 android:layout_width="40px"
                 android:layout_height="40px"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="20px"
                 android:background="@drawable/ig_portrait"
            />
         <EditText
                 android:id="@+id/ed_name"
                 android:layout_toRightOf="@+id/iv_portrait"
                 android:layout_width="match_parent"
                 android:paddingLeft="50px"
                 android:layout_height="80px"
                 android:layout_marginTop="5px"
                 android:paddingTop="5px"
                 android:textSize="30px"
                 android:paddingBottom="5px"
                 android:hint="请输入用户名"
                 android:background="@null"
                 android:layout_centerVertical="true"
         />
        <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_login_line"
          />
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/al_pwd"
            android:layout_below="@id/rl_name"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="55px"
            android:layout_width="match_parent"
            android:layout_height="80px">

        <ImageView
                android:id="@+id/iv_pwd"
                android:layout_width="36px"
                android:layout_height="40px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:background="@drawable/iv_mine_login_pwd"
        />
        <EditText
                android:id="@+id/ed_pwd"
                android:layout_toRightOf="@+id/iv_pwd"
                android:layout_width="match_parent"
                android:paddingLeft="50px"
                android:layout_height="80px"
                android:layout_marginTop="5px"
                android:paddingTop="5px"
                android:textSize="30px"
                android:inputType="textPassword"
                android:paddingBottom="5px"
                android:hint="请输入密码"
                android:background="@null"
        />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_login_line"
        />
    </com.zhy.autolayout.AutoRelativeLayout>


    <Button
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
             android:layout_below="@+id/al_pwd"
             android:id="@+id/btn_login"
             android:layout_width="match_parent"
             android:layout_height="110px"
             android:layout_marginTop="105px"
             android:background="@drawable/btn_login_bg"
             android:text="登 录"
             android:textSize="30px"
             android:textColor="@color/white"
    />
</com.zhy.autolayout.AutoRelativeLayout>