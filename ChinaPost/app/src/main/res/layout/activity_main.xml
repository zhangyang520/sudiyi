<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!--跳转到 poi关键字搜索-->
    <Button
            android:id="@+id/btn_poi_keyword"
            android:text="跳转到 poi关键字搜索"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <Button
            android:id="@+id/btn_poi_around"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_poi_keyword"
            android:text="跳转到 poi周边搜索"
            android:layout_width="200dp"
            android:layout_height="50dp"/>

    <Button
            android:id="@+id/btn_post_search"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_poi_around"
            android:text="跳转到 邮政快递界面"
            android:layout_width="200dp"
            android:layout_height="50dp"/>
</android.support.constraint.ConstraintLayout>
