<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <!--线条-->
    <View
            android:layout_below="@+id/rl_yuding"
            android:id="@+id/line_2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/base_bg_line"></View>

    <!--开始时间-->
    <com.zhy.autolayout.AutoRelativeLayout
            android:layout_below="@+id/rl_yuding"
            android:id="@+id/rl_guanggao_start_time"
            android:paddingLeft="44px"
            android:paddingTop="30px"
            android:paddingRight="20px"
            android:paddingBottom="30px"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="36px"
                android:text="开始时间"
                android:textColor="@color/black"
                android:textSize="30px"
        />

        <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_choose_start_time"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_choose_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="36px"
                    android:hint="请选择"
                    android:textColor="#A9A9A9"
                    android:textColorHint="#A9A9A9"
                    android:layout_marginRight="20px"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textSize="30px"
            />

            <ImageView
                    android:layout_width="16px"
                    android:layout_height="25px"
                    android:src="@drawable/map_iv_goto"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2px"
            />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>



    <!--线条-->
    <View
            android:layout_below="@+id/rl_guanggao_start_time"
            android:id="@+id/line_3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/base_bg_line"></View>
    <!--结束时间-->
    <com.zhy.autolayout.AutoRelativeLayout
            android:layout_below="@+id/rl_guanggao_start_time"
            android:id="@+id/rl_guanggao_end_time"
            android:paddingLeft="44px"
            android:paddingTop="30px"
            android:paddingRight="20px"
            android:paddingBottom="30px"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="36px"
                android:text="结束时间"
                android:textColor="@color/black"
                android:textSize="30px"
        />

        <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_choose_end_time"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_choose_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="36px"
                    android:hint="请选择"
                    android:textColor="#A9A9A9"
                    android:textColorHint="#A9A9A9"
                    android:layout_marginRight="20px"
                    android:layout_centerVertical="true"
                    android:textSize="30px"
                    android:background="@null"
            />

            <ImageView
                    android:layout_width="16px"
                    android:layout_height="25px"
                    android:src="@drawable/map_iv_goto"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2px"
            />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>